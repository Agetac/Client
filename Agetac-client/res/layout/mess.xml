<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <!-- Hack permettant d'empÃªcher EditText d'avoir le focus au lancement -->
  <LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/>

  <LinearLayout
    android:id="@+id/field_titles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10px"
    android:orientation="vertical">
          
 <Button android:id="@+id/retMessAmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setContentView"
             android:layout_marginTop="30px"  
            android:text="Revenir au message d'ambiance" />
	 
  
	<TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.2"
          android:layout_marginTop="30px"        
          android:text="@string/Message"/>
    
	
	<EditText
	      android:id="@+id/edittext_message_normal"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_weight="0.2"   
	      android:gravity="top"/>
	
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/field_titles"
		android:orientation="horizontal"
		android:layout_gravity = "center_horizontal">

		<Button android:id="@+id/messEnvoyer" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Envoyer"
			 android:layout_marginTop="30px"  
			/>

		<Button android:id="@+id/messAnnuler" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Annuler"
			android:layout_marginLeft ="30px"  android:layout_marginTop="30px"  
			 />

	</LinearLayout>

	 
	 
	
	  </LinearLayout>
</RelativeLayout>